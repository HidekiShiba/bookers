<!-- 投稿一覧部分  -->
<h2>Books</h2>
<table>
　<thead>
    <tr>
    　<th>Title</th>
    　<th>Body</th>
    </tr>
　</thead>
　<tbody>
    <% @books.each do |book| %>
    <tr>
    　<td><%= book.title %></td>
    　<td><%= book.body %></td>
    　<td><%= link_to "show", book_path(book) %></td>
    　<td><%= link_to "edit", edit_book_path(book) %></td>
    　<td><%= link_to "destroy", book_path(book), :method => :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
　</tbody>
</table>

<!-- 新規投稿部分  -->
<h2>New book</h2>
<!-- 新規投稿エラー文  -->
